<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hlx.vbblog.dao.ArticleTagMapper">
    <resultMap id="baseColumnResultMap" type="com.hlx.vbblog.model.ArticleTag">
        <id column="article_id" property="articleId"/>
        <id column="tag_id" property="tagId"/>
    </resultMap>
    <sql id="baseColumnSql">
        article_id, tag_id
    </sql>

    <insert id="insertBatch">
        insert into t_article_tag(<include refid="baseColumnSql"/>) values
        <foreach collection="tagIdList" item="tagId" separator=",">
            (#{articleId},#{tagId})
        </foreach>
    </insert>

</mapper>
